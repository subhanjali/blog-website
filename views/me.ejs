<%- include('partials/header') %>

 <!-- <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br> -->
<div class="main-container">
  <div class="profile-content">
    <div class="profile-img">
      <img src="" alt="NO profile image" />
      <div class="name">
        <h2><%=usersWithSecrets.displayname%></h2>
        <span><%=usersWithSecrets.about%></span>
      </div>
    </div>
    <button class="edit">

      <a class="btn btn-light btn-lg" href="/myprofile" role="button"> <i class="fas fa-edit"></i>Edit</a>
    </button>
  </div>
  <!-- break -->
  <hr class="break" />
  <div class="body-content">



    <div class="main">
      <div class="card bg-dark">
        <p>Followers</p>
        <p class="num">1212</p>
      </div>
      <div class="card">
        <p>Following</p>
        <p class="num">422</p>
      </div>
      <div class="card">
        <p>Total blogs</p>
        <p class="num">11</p>
      </div>
    </div>


    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">Read these blogs!</h1>

    <% usersWithSecrets.secret.forEach((user, i) => {%>


    <h3 class="" style="color:black;"><%= user.title%></h3><br>
    <p><%=  user.content%></p>
    <% if(user.blogImg!=undefined){var str=user.blogImg;%>
    <% var ext = str.substring(str.lastIndexOf("."),str.length+1);%>
    <% if(ext=== ".MP4" || ext=== ".MOV" || ext=== ".WMV" || ext=== ".WEBM"){%>
    <video style=" width:50%;" autoplay poster="posterimage.jpg" controls>
      <source src="upload/<%= user.blogImg%>" type="video/mp4">
    </video>
    <% } else{%>
    <img style=" width:20%;" alt="here is it <%=user.blogImg%>" src="upload/<%= user.blogImg%>">
    <% } %>

    <% } %>

    <% if(user.blogImg2!=undefined){var str=user.blogImg2;%>
    <% var ext = str.substring(str.lastIndexOf("."),str.length+1);%>
    <% if(ext=== ".MP4" || ext=== ".MOV" || ext=== ".WMV" || ext=== ".WEBM"){%>
    <video style=" width:50%;" autoplay poster="posterimage.jpg" controls>
      <source src="upload/<%= user.blogImg2%>" type="video/mp4">
    </video>
    <% } else{%>
    <img style=" width:50%;" alt="here is it <%=user.blogImg%>" src="upload/<%= user.blogImg2%>">
    <% } %>
    <% } %>
    <% if(user.blogImg3!=undefined){var str=user.blogImg3;%>
    <% var ext = str.substring(str.lastIndexOf("."),str.length+1);%>
    <% if(ext=== ".MP4" || ext=== ".MOV" || ext=== ".WMV" || ext=== ".WEBM"){%>
    <video style=" width:50%;" autoplay poster="posterimage.jpg" controls>
      <source src="upload/<%= user.blogImg2%>" type="video/mp4">
    </video>
    <% } else{%>
    <img style=" width:50%;" alt="here is it <%=user.blogImg%>" src="upload/<%= user.blogImg3%>">
    <% } %>
    <% } %>
    <br>
    <% for(var j=0;j<user.tags.length;j++){%>
    <span style="color:white; background:darkblue;"><%=  user.tags[j]%></span>
    <% } %><form action="/me" method="POST">
      <input type="hidden" type="text" name="theuser" value="<%=  theuser%>">
      <input type="hidden" type="text" name="theid" value="<%=  user._id%>">

      <button type="submit" style="font-size:24px"><i class="fa fa-trash-o"></i></button>
    </form>

    <%}) %>
    <%  %>


    <hr>
    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a blog</a>
  </div>
</div>

<%- include('partials/footer') %>
